        android:hint="Festival end date" />

    <EditText
        android:id="@+id/dialog_festival_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_festival_end_date"
        android:hint="Festival address" />


