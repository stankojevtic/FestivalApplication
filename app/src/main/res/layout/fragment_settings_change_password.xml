<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/change_password_dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:gravity="center_horizontal|center_vertical">

    <TextView
        android:id="@+id/change_password_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:text="Change password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/old_password"
        android:layout_width="208dp"
        android:layout_below="@+id/change_password_textview"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_password_logo"
        android:ems="10"
        android:hint="Old password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/old_password"
        android:drawableLeft="@drawable/ic_password_logo"
        android:ems="10"
        android:hint="New password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/conf_password"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_password"
        android:drawableLeft="@drawable/ic_password_logo"
        android:ems="10"
        android:hint="Repeat new password"
        android:inputType="textPassword" />
</RelativeLayout>